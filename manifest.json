{
  "manifest_version": 3,
  "name": "Extension",
  "version": "0.0.1",
  "author": "Amir Sharapov",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js",
        "socket.js",
        "tasks/instagram_hashtags.js",
        "tasks/instagram_login.js",
        "utils.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "background",
    "scripting",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}